<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyProducts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyProducts" parent="Base.Theme.MyProducts" />

    <style name="RoundedSquareImageView">
        <item name="cornerSize">10%</item>

    </style>

    <style name="CircularCornerView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DropDownInputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="PrimaryButtonAppTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="android:background">@drawable/primary_button_shape</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:stateListAnimator">@drawable/button_state_animation</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProductsSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!--Splash theme -->
    <style name="SplashActivityTheme" parent="Base.Theme.MyProducts">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

</resources>